[flake8]
max-line-length = 100
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long
    W503,  # line break before binary operator
    E402,  # module level import not at top of file
    F401,  # imported but unused
    F403,  # star import used
    F405,  # name may be undefined
exclude = 
    __pycache__,
    .git,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    .venv,
    venv,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    demo_*.py:E402
    run_*.py:E402
    validate_*.py:E402
max-complexity = 10
select = E,W,F,C
ignore = 
    E203,
    E501,
    W503,
    E402,
    F401,
    F403,
    F405