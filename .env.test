# Test Environment Configuration for FreeMobilaChat
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration - Using SQLite for testing
DATABASE_TYPE=sqlite
SQLITE_DATABASE_PATH=./data/freemobilachat_test.db

# Security Configuration
SECRET_KEY=test_secret_key_for_production_testing_only

# CORS settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501","http://127.0.0.1:8501"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# LLM Provider Configuration - Using Mistral for testing
DEFAULT_LLM_PROVIDER=mistral
MISTRAL_API_KEY=fake_api_key_for_testing
MISTRAL_MODEL=mistral-large-latest
MISTRAL_MAX_TOKENS=4000
MISTRAL_TEMPERATURE=0.1

# Application Settings
HOST=0.0.0.0
PORT=8000
WORKERS=2
WORKER_CLASS=uvicorn.workers.UvicornWorker
TIMEOUT=120

# File upload settings
MAX_FILE_SIZE_MB=200
UPLOAD_DIR=./uploads
ALLOWED_FILE_EXTENSIONS=[".csv",".xlsx",".xls"]

# Processing settings
DEFAULT_BATCH_SIZE=10
MAX_BATCH_SIZE=100
PROCESSING_TIMEOUT=300

# Logging
LOG_FORMAT=json
LOG_FILE=./logs/freemobilachat_test.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7

# Feature flags
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=false
ENABLE_CORS=true
